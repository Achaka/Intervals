<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paceconverter.PaceConverterFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/main_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:digits="01234567890"
        android:maxLength="5"
        />

    <TextView
        android:id="@+id/units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="units"
        app:layout_constraintBottom_toBottomOf="@+id/main_field"
        app:layout_constraintStart_toEndOf="@+id/main_field"
        app:layout_constraintTop_toTopOf="@+id/main_field" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_field" />

    <TextView
        android:id="@+id/first_field_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_field" />

    <TextView
        android:id="@+id/second_field_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/third_field_title"
        app:layout_constraintStart_toEndOf="@+id/first_field_title"
        app:layout_constraintTop_toBottomOf="@+id/main_field" />

    <TextView
        android:id="@+id/third_field_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_field" />

    <TextView
        android:id="@+id/first_field_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/first_field_title"
        app:layout_constraintStart_toStartOf="@+id/first_field_title"
        app:layout_constraintTop_toBottomOf="@+id/first_field_title" />

    <TextView
        android:id="@+id/second_field_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/second_field_title"
        app:layout_constraintStart_toStartOf="@+id/second_field_title"
        app:layout_constraintTop_toBottomOf="@+id/second_field_title" />

    <TextView
        android:id="@+id/third_field_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/third_field_title"
        app:layout_constraintStart_toStartOf="@+id/third_field_title"
        app:layout_constraintTop_toBottomOf="@+id/third_field_title" />

</androidx.constraintlayout.widget.ConstraintLayout>